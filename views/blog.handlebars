<!-- /home.handlebars -->
<div id="container">
    <h1>WiSTEM Board Blog</h1>
    <hr>

    {{#if admin}}<div>
    <form enctype="multipart/form-data" class="form-horizontal" action="/blogpost" method="post">

        <div class="form-group">
            <label class="col-sm-2 control-label">Headline</label>
            <div class="col-sm-10">
              <input name="headline" class="form-control" placeholder="Headline of your post to WiSTEM blog" required>
            </div>
        </div>
        <br>
        <h5>Body</h5>
        <textarea class="form-control" name="body" rows="7" placeholder="Body of your post to WiSTEM blog" required></textarea>
        <br>
        <div class="form-group">
            <div class="pull-right">
              <label>Images <span class="glyphicon glyphicon-cloud-upload" aria-hidden="true"></span></label>
              <input type="file" name="image" id="image">
            </div>
            <div class="pull-left">
              <input type="submit" class="btn btn-default btn-lg center-block" value="Post"/>
            </div>
        </div>
    </form>
    </div>

    <hr>
    {{/if}}

   <div id="blog-posts">

        {{{posts}}}
   </div>

</div>
