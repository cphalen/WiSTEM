<!-- /signin.handlebars -->
<div class="jumbotron">
  <h2>Please sign in or register</h2>
    <form id="local-sign-in" action="/login" method="post">
        <div>
            <p></p>
            <label>Username:</label>
            <input type="text" class="form-control" name="username"/>
        </div>
        <div>
            <label>Password:</label>
            <input type="password" class="form-control" name="password"/>
        </div>
        <br>
        <div>
            <input type="submit" class="btn btn-primary btn-sm" value="Log In"/>
            <a data-toggle="collapse" href="#local-reg" class="btn btn-default btn-md" role="button">I need to make an account</a>
        </div>
    </form>

    <form id="local-reg" class="collapse" enctype="application/json" action="/local-reg" method="post">
        <div>
            <p></p>
            <label>New Username:</label>
            <input type="text" class="form-control" name="username"/>
        </div>
        <div>
            <label>New Password:</label>
            <input type="password" class="form-control" name="password"/>
        </div>
        <br>
        <div>
            <input type="submit" class="btn btn-primary btn-sm" value="Register"/>
        </div>
    </form>
</div>
