<!-- /home.handlebars -->
<div id="container">
    <h1>WiSTEM Forum</h1>
    <hr>

    <form enctype="multipart/form-data" class="form-horizontal" action="/forum-post" method="post">

        <div class="form-group">
            <label class="col-sm-2 control-label">Headline</label>
            <div class="col-sm-10">
              <input name="headline" class="form-control" placeholder="Headline of your post to WiSTEM forum" required>
            </div>
        </div>
        <br>
        <h5>Body</h5>
        <textarea class="form-control" name="body" rows="7" placeholder="Body of your post to WiSTEM forum" required></textarea>
        <br>
        <div class="form-group">
            <div class="pull-right">
              <label>Images <span class="glyphicon glyphicon-cloud-upload" aria-hidden="true"></span></label>
              <input type="file" name="image" id="image">
            </div>
            <div class="pull-left">
              <input type="submit" class="btn btn-default btn-lg center-block" value="Post"/>
            </div>
        </div>
    </form>

    <br>
    <hr>
    <br>

    <h2>WiSTEM Forum Wall</h2>
    <div class="jumbotron">
        {{{posts}}}
    </div>

</div>
